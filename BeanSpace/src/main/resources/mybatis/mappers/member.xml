<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
	<resultMap id="memResult" type="memberVO">
		<result property="email" column="email" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
		<result property="phone" column="phone" />
		<result property="carnum" column="carnum" />
		<result property="mileage" column="mileage" />
	</resultMap>
<!-- <resultMap id="memResult" type="java.util.HashMap"> <result property="id" 
		column="id" /> <result property="pwd" column="pwd" /> <result property="name" 
		column="name" /> <result property="email" column="email" /> <result property="joinDate" 
		column="joinDate" /> </resultMap> -->

	<select id="selectMyInfo" resultType="memberVO">
	      <![CDATA[
  		select * from bs_member	
		where email=#{email}
      ]]>
	
	</select>


	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from bs_member	order by joinDate desc	 	
      ]]>
	</select>

	<insert id="insertMember" parameterType="memberVO">
    <![CDATA[
        insert into bs_member (email, pwd, name, phone, carnum)
        values (#{email}, #{pwd}, #{name}, #{phone}, #{carnum})
    ]]>
	</insert>


	<update id="updateMember" parameterType="memberVO">
     <![CDATA[
	     update bs_member
	     set pwd=#{pwd}, name=#{name}, email=#{email}, carnum=#{carnum}, phone=#{phone}, mileage=#{mileage}
	     where
	     email=#{email}
      ]]>
	</update>

	<delete id="deleteMember" parameterType="String">
	<![CDATA[
	   delete from  t_member
	   where
	   email=#{email}
	]]>
	</delete>
	<select id="loginById" resultMap="memResult" 
		parameterType="memberVO">
	<![CDATA[
		select * from bs_member	
		where  email=#{email} and pwd=#{pwd}		
	]]>
	</select>
		<update id="addmileage" parameterType="string">
        update bs_member mileage = bs_member.mileage+1
        WHERE EMAIL = #{email}
    </update>
	
	<select id="checkEmail" parameterType="string" resultType="int">
        SELECT COUNT(*)
        from bs_member
        WHERE EMAIL = #{email}
    </select>
    
    

</mapper>