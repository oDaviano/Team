	<select id="selectMemberReserves" parameterType = "String" resultMap="ReserveResult">
      <![CDATA[
         select * from bs_reservation
         where
         email=#{email}
         order by ptime desc	 	
      ]]>
	</select>

	<insert id="addReserve" parameterType="reserveVO">
		<![CDATA[
		 insert into bs_reservation(rsvnum, name, ptime, etime, phone, carnum, fee, mileage ,email,address )
		 values(#{rsvnum}, #{name}, #{ptime},#{etime}, #{phone}, #{carnum}, #{fee}, #{mileage},#{email},#{address})
		]]>
	</insert>


	<delete id="deletReserve" parameterType="String">
	<![CDATA[
	   delete from  bs_reservation
	   where
	   rsvnum=#{rsvnum}
	]]>
	</delete>
	
	<select id="checkRsvnum" parameterType = "Integer" resultType="Integer">
	
	      <![CDATA[
         select count(*) from bs_reservation
         where
         rsvnum=#{rsvnum}	 	
      ]]>
	</select>
	
	<select id="rsvDetail" parameterType = "Integer" resultType="reserveVO">
	
	      <![CDATA[
         select * from bs_reservation
         where
         rsvnum=#{rsvnum}	 	
      ]]>
	</select>


</mapper>